<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:background="#b2000000"
    android:orientation="horizontal">

    <CheckBox
        android:layout_marginLeft="7dp"
        android:layout_marginRight="5dp"
        android:id="@+id/player_l_play_pause"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="center"
        android:button="@null"
        android:background="@drawable/vr_video_toolbar_tb_play"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/player_l_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:indeterminateOnly="false"
            android:max="1000"
            android:splitTrack="false"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:progressDrawable="@drawable/module_player_seek_bar_drawable"
            android:thumb="@drawable/module_player_seek_bar_thumb" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/player_l_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="--:--"
        android:textColor="#ffffff"
        android:textSize="11sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / "
        android:textColor="#878686"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/player_l_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--:--"
        android:textColor="#878686"
        android:textSize="11sp" />


</LinearLayout>

    </LinearLayout>

    <CheckBox
        android:layout_marginLeft="7dp"
        android:layout_marginRight="5dp"
        android:id="@+id/player_l_play_gyro"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="center"
        android:button="@null"
        android:background="@drawable/vr_video_toolbar_tb_gyro"
        />

    <CheckBox
        android:layout_marginLeft="7dp"
        android:layout_marginRight="5dp"
        android:id="@+id/player_l_play_screen"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="center"
        android:button="@null"
        android:background="@drawable/vr_video_toolbar_tb_screen"
        />


    <ImageView
        android:id="@+id/player_l_small_screen"
        android:layout_width="34dp"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@mipmap/module_player_controls_retract" />

</LinearLayout>

