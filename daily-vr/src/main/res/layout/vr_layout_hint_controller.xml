<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
        android:button="@null"
        android:id="@+id/player_ic_volume"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/vr_video_toolbar_tb_volume" />

    <ImageView
        android:id="@+id/player_buffer_progress"
        android:src="@drawable/play_loading"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_vr_guide"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/vr_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8.5dp"
            android:textSize="@dimen/ts_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="360度滑动看看"
            android:textColor="#ffffff"

            />

    </LinearLayout>

</RelativeLayout>