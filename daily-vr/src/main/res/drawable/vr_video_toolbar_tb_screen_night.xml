<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 分屏按钮 -->
    <item android:state_checked="true"
        android:drawable="@drawable/screen_btn_on_night" /> <!-- 如果是true，运行时显示的是 android:textOn 的值 -->
    <item android:state_checked="false" 
        android:drawable="@drawable/screen_btn_off_night" /> <!-- 如果是false，运行是显示的是 android:textOff 的值 -->
</selector>